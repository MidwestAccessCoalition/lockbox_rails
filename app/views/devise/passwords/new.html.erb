<div class="account-creation-form-container">
  <h2>Send password reset instructions</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form' }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true %>
    </div>

    <div class="actions">
      <%= f.submit "Send", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<%= javascript_pack_tag 'forms', 'data-turbolinks-track': 'reload' %>
