<div class="container">
  <%= form_for @user, html: { class: 'form' } do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= @user.errors.count %> error(s) prohibited this user from being saved:
        </h2>
        <ul>
          <% @user.errors.full_messages.each do |error_message| %>
            <li><%= error_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <h2>Update User</h2>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', minlength: 2, required: true %>
    </div>
    <%= f.submit 'Update User Information', class: 'btn btn-primary' %>
    <%= link_to "Cancel", root_path, class: 'btn btn-secondary' %>
  <% end %>
</div>

<%= javascript_pack_tag 'forms', 'data-turbolinks-track': 'reload' %>
