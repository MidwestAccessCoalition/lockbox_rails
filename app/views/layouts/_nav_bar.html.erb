        data-toggle="collapse"
        data-target="#navbar"
        aria-expanded="false"
        aria-controls="navbar"
      >
        <span class="sr-only">Toggle navigation</span>
        <% if current_user.admin? %>
          <%= fa_icon "bars" %>
          <%= fa_icon "times" %>
        <% else %>
          <%= fa_icon "cog" %>
        <% end %>
      </button>
