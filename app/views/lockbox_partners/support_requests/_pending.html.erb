<div class="pending-request">
  <div class="header">
    <div class="content row">
      <div class="col-12 col-md-8">
        <p><b><%= support_request.pickup_date.strftime('%B %d, %Y') %> - <%= support_request.name_or_alias %></b></p>
        <h3>Support Request:  $<%= support_request.amount %></h3>
      </div>
      <div class="col-12 col-md-4">
        <%= render partial: 'lockbox_partners/support_requests/status_dropdown', locals: { support_request: support_request, label: true } %>
      </div>
    </div>
  </div>
  <div class="notes">
    <div class="content">
      <div class="row">
        <div class="col-sm-3">
          <%= support_request.most_recent_note&.created_at_formatted %>
        </div>
        <div class="col-sm-3">
          <%= support_request.most_recent_note&.author %>
        </div>
        <div class="col-sm-6">
          <%= support_request.most_recent_note&.text %>
        </div>
      </div>
    </div>
  </div>
  <% path = lockbox_partner_support_request_path(support_request.lockbox_partner, support_request) %>
  <%= link_to path, class: 'btn btn-primary view-full' do %>
    View Details
    <span class="float-right">
      <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
    </span>
  <% end %>
</div>
