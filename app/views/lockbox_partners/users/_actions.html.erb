<% if user.available_action_text == 'Resend Invite' %>
  Placeholder for <%= user.available_action_text %> form
<% else %>
  <% lock_user = user.available_action_text == 'Lock Account' %>
  <%= form_tag(lockbox_partner_user_path(user.lockbox_partner, user), method: 'put') do %>
    <%= hidden_field_tag(:lock_user, lock_user) %>
    <%= submit_tag(user.available_action_text) %>
  <% end %>
<% end %>
