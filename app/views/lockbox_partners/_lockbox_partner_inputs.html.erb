<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control', minlength: 2, required: true %>
</div>
<div class="form-group">
  <%= f.label :street_address %>
  <%= f.text_field :street_address, class: 'form-control', required: true  %>
</div>
<div class="form-group">
  <%= f.label :city %>
  <%= f.text_field :city, class: 'form-control', required: true  %>
</div>
<div class="form-group">
  <%= f.label :state %>
  <%= f.select :state,
    options_for_select(us_states),
    {},
    class: 'form-control',
    required: true
  %>
</div>
<div class="form-group">
  <%= f.label :zip_code %>
  <%= f.text_field :zip_code,
    class: 'form-control',
    minlength: 5,
    maxlength: 5,
    pattern: "[0-9]{5}",
    required: true
  %>
</div>
<div class="form-group">
  <%= f.label :phone_number %>
  <%= f.text_field :phone_number,
    class: 'form-control',
    minlength: 10,
    maxlength: 10,
    pattern: "[0-9]{10}",
    placeholder: "Format: 3124567890",
    required: true
  %>
</div>
<div class="form-group">
  <%= f.label :phone_ext %>
  <%= f.text_field :phone_ext,
    class: 'form-control'
  %>
</div>
