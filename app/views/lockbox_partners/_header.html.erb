<div class="lockbox-partner-header">
  <strong><%= lockbox_partner.city %></strong>
  <% if current_user.admin? %>
    <%= render partial: 'lockbox_partners/back_to_dashboard', locals: {:alignment => 'right'} %>
  <% end %>
  <h2>
    <%= lockbox_partner.name %>
    <span class="float-right">
      <i button id="lockbox_partner_balance_button" class="fa fa-info-circle" aria-describedby="tooltip"></i>
      <div id="lockbox_partner_balance_popup_text" class="btn btn-secondary" data-container="body" data-toggle="popover" data-trigger="focus" data-placement="bottom">
        The balance here includes all cash in the partner lockbox, minus any Pending Support Requests.
      </div>
      <%= lockbox_partner.balance %>
    </span>
  </h2>
  <div class="lockbox-partner-info">
    <p class="address">
      <% if lockbox_partner.street_address %>
        <%= lockbox_partner.street_address %>
        <br>
      <% end %>
      <%= lockbox_partner.city %>, <%= lockbox_partner.state %> <%= lockbox_partner.zip_code %>
    </p>
    <p class="phone_number">
      <%= lockbox_partner.phone_number %>
    </p>
  </div>
  <div class="horizontal-rule"></div>
</div>
